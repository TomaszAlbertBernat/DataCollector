# DataCollector Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# üö® CRITICAL SECURITY WARNING
# ===================
# ‚ö†Ô∏è API KEYS ARE FORBIDDEN TO MODIFY
# - DO NOT modify, remove, or alter any API keys in the .env file
# - DO NOT commit API keys to version control (already in .gitignore)
# - DO NOT share API keys in logs, documentation, or communications
# - API keys are essential for system functionality - modifying them will break the application
# - If API keys are missing or corrupted, restore them from your secure backup immediately
# ===================

# ===================
# APPLICATION SETTINGS
# ===================
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ===================
# DATABASE SETTINGS
# ===================
# PostgreSQL Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/datacollector
DB_HOST=localhost
DB_PORT=5432
DB_NAME=datacollector
DB_USER=postgres
DB_PASSWORD=postgres123
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===================
# REDIS CONFIGURATION
# ===================
REDIS_URL=redis://:redis123@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0
REDIS_CACHE_TTL=3600

# ===================
# JOB QUEUE SETTINGS
# ===================
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=redis123
QUEUE_REDIS_DB=1
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# ===================
# OPENSEARCH SETTINGS
# ===================
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_INDEX_PREFIX=datacollector
OPENSEARCH_MAX_RETRIES=3
OPENSEARCH_REQUEST_TIMEOUT=30000

# ===================
# VECTOR STORE SETTINGS
# ===================
CHROMADB_URL=http://localhost:8000
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=documents
CHROMADB_DISTANCE_FUNCTION=cosine

# ===================
# AI/ML CONFIGURATION
# ===================
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1
OPENAI_REQUEST_TIMEOUT=30000

# Embedding Model Options:
# text-embedding-3-small: Most cost-effective ($0.02/1M tokens), better than ada-002
# text-embedding-3-large: Highest accuracy ($0.13/1M tokens), 75% better multilingual
# text-embedding-ada-002: Legacy model ($0.10/1M tokens) - replaced by 3-small/large
# 
# Optional: Custom embedding dimensions for storage optimization
# OPENAI_EMBEDDING_DIMENSIONS=512  # For 3-small (default: 1536)
# OPENAI_EMBEDDING_DIMENSIONS=1024 # For 3-large (default: 3072)

# LangChain Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=datacollector

# ===================
# WEB SCRAPING SETTINGS
# ===================
# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_USER_AGENT=DataCollector Bot 1.0
PLAYWRIGHT_VIEWPORT_WIDTH=1920
PLAYWRIGHT_VIEWPORT_HEIGHT=1080

# Rate Limiting
SCRAPING_DELAY_MIN=1000
SCRAPING_DELAY_MAX=3000
SCRAPING_CONCURRENT_LIMIT=3
SCRAPING_RESPECT_ROBOTS_TXT=true

# ===================
# FILE PROCESSING
# ===================
# File Storage
STORAGE_PATH=./data
UPLOAD_MAX_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,json,xml
TEMP_DIR=./temp

# Text Processing
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100
TEXT_ENCODING=utf-8

# ===================
# SECURITY SETTINGS
# ===================
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# API Security
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100
API_CORS_ORIGIN=http://localhost:3000
API_ENABLE_CORS=true

# Password Security
BCRYPT_ROUNDS=12

# ===================
# WEBSOCKET SETTINGS
# ===================
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# ===================
# MONITORING & LOGGING
# ===================
# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# ===================
# ACADEMIC SOURCES
# ===================
# Google Scholar
GOOGLE_SCHOLAR_BASE_URL=https://scholar.google.com
GOOGLE_SCHOLAR_MAX_RESULTS=50

# PubMed
PUBMED_BASE_URL=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
PUBMED_API_KEY=your_pubmed_api_key_here
PUBMED_EMAIL=your_email@example.com
PUBMED_MAX_RESULTS=100

# arXiv
ARXIV_BASE_URL=http://export.arxiv.org/api/query
ARXIV_MAX_RESULTS=50

# ===================
# DEVELOPMENT SETTINGS
# ===================
# Debug Settings
DEBUG_ENABLED=true
DEBUG_NAMESPACE=datacollector:*
VERBOSE_LOGGING=false

# Development Tools
HOT_RELOAD=true
ENABLE_PLAYGROUND=true
PLAYGROUND_PORT=4000

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/datacollector_test
TEST_REDIS_DB=15
TEST_TIMEOUT=30000

# ===================
# PERFORMANCE SETTINGS
# ===================
# Caching
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_ITEMS=10000

# Connection Pooling
DB_CONNECTION_POOL_SIZE=10
REDIS_CONNECTION_POOL_SIZE=10

# Resource Limits
MAX_CONCURRENT_JOBS=10
MAX_MEMORY_USAGE=1024
MAX_CPU_USAGE=80

# ===================
# NOTIFICATION SETTINGS
# ===================
# Email Configuration (optional)
EMAIL_ENABLED=false
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@datacollector.com

# Webhook Configuration (optional)
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-url.com/notify
WEBHOOK_SECRET=your_webhook_secret

# ===================
# DEPLOYMENT SETTINGS
# ===================
# Production Settings
DEPLOYMENT_ENV=development
CLUSTER_MODE=false
CLUSTER_WORKERS=4

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Health Checks
HEALTH_CHECK_ENABLED=true
READY_CHECK_ENABLED=true 